<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <!-- EmptyView -->
    <declare-styleable name="EmptyView">
        <attr name="topText" format="reference|string" />
        <attr name="showProgressBar" format="boolean" />
        <attr name="canRefresh" format="boolean" />
    </declare-styleable>

    <style name="CommonEmptyViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CommonEmptyViewImageViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@mipmap/ic_launcher</item>
    </style>

    <style name="CommonEmptyViewTopTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">#5f7992</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="CommonEmptyViewBottomRefreshBtnStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">13dp</item>
        <item name="android:background">@drawable/refresh_btn_selector</item>
    </style>
    <!-- empty textview notice -->
    <string name="msg_top_nonet">暂无网络</string>
    <string name="msg_top_fail">获取数据失败</string>
    <string name="msg_top_nodata">暂无数据</string>
    <string name="msg_bottom">轻触屏幕刷新</string>
    <!-- EmptyView END-->
    

</resources>